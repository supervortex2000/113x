#include "base_aml.config"

# CPU Architecture
BR2_cortex_a53=y
BR2_ARM_ENABLE_VFP=y
BR2_ARM_ENABLE_NEON=y
BR2_ARM_FPU_NEON=y

#Kernel Config
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_LOCAL_VERSION_VALUE="amlogic-5.4-dev"
BR2_LINUX_KERNEL_CUSTOM_LOCAL=y
BR2_LINUX_KERNEL_CUSTOM_LOCAL_PATH="$(TOPDIR)/../kernel/aml-5.4"
BR2_LINUX_KERNEL_DEFCONFIG="meson64_a64_smarthome"
BR2_LINUX_KERNEL_IMAGE_LOADADDR="0x1008000"
BR2_LINUX_KERNEL_PATCH="amlogic-5.4"
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_USE_INTREE_DTS=y
BR2_LINUX_KERNEL_AMLOGIC_DTD=y
BR2_LINUX_KERNEL_ANDROID_FORMAT=y
BR2_LINUX_KERNEL_IMAGE=y
BR2_TARGET_BOARD_PLATFORM="mesona4"

#Uboot Config
BR2_TARGET_UBOOT=y
BR2_TARGET_UBOOT_CUSTOM_LOCAL=y
BR2_TARGET_UBOOT_CUSTOM_LOCAL_VERSION_VALUE="next-2019-dev"
BR2_TARGET_UBOOT_CUSTOM_LOCAL_LOCATION="$(TOPDIR)/../bootloader/uboot-repo"
BR2_TARGET_UBOOT_PATCH=""
BR2_TARGET_UBOOT_AMLOGIC_REPO=y
BR2_TARGET_UBOOT_PLATFORM="a4"

BR2_ROOTFS_COMMON_OVERLAY=""
BR2_ROOTFS_UPGRADE_DIR="board/amlogic/common/upgrade/upgrade-a4/"
BR2_RECOVERY_OTA_DIR="board/amlogic/common/ota/ota-a4/"
BR2_RECOVERY_OTA_RAMDISK_DIR="board/amlogic/common/ota/ota-a4/ramdisk/"

#Rootfs Config
BR2_TARGET_ROOTFS_CPIO=y
BR2_TARGET_ROOTFS_CPIO_GZIP=y
BR2_TARGET_ROOTFS_CPIO_UIMAGE=y
BR2_TARGET_ROOTFS_TAR_GZIP=y

BR2_ROOTFS_DEVICE_CREATION_DYNAMIC_MDEV=y

BR2_PACKAGE_NETCHECK=y

BR2_PACKAGE_AML_SOC_FAMILY_NAME="A4"
BR2_PACKAGE_AML_SOC_CHIP_NAME="A113L2"
#TDK
BR2_PACKAGE_TDK=y
BR2_PACKAGE_TDK_VERSION="3.8"
BR2_PACKAGE_TDK_LOCAL_PATH="$(TOPDIR)/../vendor/amlogic/tdk-3.8"

BR2_PACKAGE_AOCPU_RTOS_SDK_LOCAL_PATH="$(TOPDIR)/../bootloader/uboot-repo/bl30/rtos_sdk"

