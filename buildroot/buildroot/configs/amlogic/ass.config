##########################################################
# config for AVS (alexa voice service)
##########################################################
#
#avs-support
#
BR2_PACKAGE_NGHTTP2=y
BR2_PACKAGE_MBEDTLS=y
BR2_PACKAGE_LIBCURL_MBEDTLS=y
BR2_PACKAGE_LIBTOOL=y
BR2_PACKAGE_LIBGMIME=y
BR2_PACKAGE_GLIB_NETWORKING=y
BR2_PACKAGE_GNUTLS=y
BR2_PACKAGE_LIBSOUP=y
BR2_PACKAGE_LIBSOUP_SSL=y
BR2_PACKAGE_LIBTOTEM=y
BR2_PACKAGE_LIBARCHIVE=y
BR2_PACKAGE_PORTAUDIO=y
#
#avs
#
BR2_PACKAGE_AVS_SDK=y
#BR2_AVS_DSPC_AEC=y
BR2_AVS_DSPC_AEC_WWE=y
BR2_AVS_AMAZON_WWE=y
#BR2_AVS_RDSPC=y
#BR2_AML_BT_DSPC=y

#led ring
#
BR2_PACKAGE_LEDRING=y

BR2_PACKAGE_OPENSSH=y

#for Alexa smart screen case, set BR2_PACKAGE_AVS_SDK_SITE to another folder
BR2_PACKAGE_AVS_SDK_SITE="$(TOPDIR)/../vendor/amlogic/avs-sdk"

#control build avs sampleapp
AVS_NOT_BUILD_SAMPLEAPP=y

