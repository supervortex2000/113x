#SecMem
BR2_PACKAGE_LIBSECMEM_BIN=y

#BR2_PACKAGE_LIBCONFIG=y
BR2_PACKAGE_AML_TVSERVER=y
BR2_PACKAGE_AML_PQSERVER=y
BR2_PACKAGE_AML_PQSERVER_USE_LIBBINDER=y
#include "gst.config"

#include "gst_aml.config"
BR2_PACKAGE_LIBDRM_MESON=y
BR2_PACKAGE_GST_PLUGIN_AML_VSINK=y
BR2_PACKAGE_GST_AML_PLUGINS1=n

#Secure GST allocator
BR2_PACKAGE_GST_AML_DRM_PLUGINS1=y

#fw loader
BR2_PACKAGE_SECFIRMLOAD=y
BR2_PACKAGE_LAUNCHER_USE_SECFIRMLOAD=y
#
#drm
BR2_PACKAGE_LIBDRM=y
BR2_PACKAGE_LIBDRM_HAS_ATOMIC=y
BR2_PACKAGE_MESON_DISPLAY=y
