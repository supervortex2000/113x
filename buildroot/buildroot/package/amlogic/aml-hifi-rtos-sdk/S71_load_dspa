# This source code is subject to the terms and conditions defined in the file 'LICENSE' which is part of this source code package.
# Description: start|stop|resetart the dspa
#


case "$1" in
  start)
    # load firmware
    if [ -f /lib/firmware/dspbootA_sram.bin ]; then
        dsp_util --load2 --dsp hifi4a --firmware1 dspbootA_sdram.bin --firmware2 dspbootA_sram.bin
    else
        dsp_util --load --dsp hifi4a -f dspbootA.bin
    fi
    # Launch DSP rtos
    dsp_util -S --dsp hifi4a
    ;;
  stop)
    echo -n "Do thing: "
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    exit 1
esac

exit 0
