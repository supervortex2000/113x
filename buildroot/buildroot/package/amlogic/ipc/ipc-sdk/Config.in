	select BR2_PACKAGE_LIBPNG
	select BR2_PACKAGE_ALSA_LIB
	select BR2_PACKAGE_FDK_AAC
	select BR2_PACKAGE_FREETYPE
	select BR2_PACKAGE_SPEEXDSP
	select BR2_PACKAGE_AML_LIBGE2D
